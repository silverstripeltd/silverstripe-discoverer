{
    "name": "silverstripeltd/silverstripe-search",
    "description": "Service agnostic abstraction of search querying requirements",
    "type": "silverstripe-vendormodule",
    "license": "proprietary",
    "homepage": "https://github.com/silverstripeltd/silverstripe-search",
    "authors": [
        {
            "name": "Christopher David Penny",
            "email": "chris.penny@gmail.com"
        }
    ],
    "keywords": [
        "Silverstripe",
        "Silverstripe CMS",
        "Search"
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/framework": "^5",
        "silverstripeltd/silverstripe-search-elastic": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "silverstripeltd/bespoke-standards": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Silverstripe\\Search\\": "src/",
            "Silverstripe\\Search\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "silverstripe-standards": [
            "@php-lint",
            "@phpcs"
        ],
        "php-lint": "bespoke-phplint",
        "phpcs": "bespoke-phpcs",
        "phpcbf": "bespoke-phpcbf",
        "phpcs-fix": "@phpcbf"
    }
}
