{
    "name": "silverstripeltd/discoverer",
    "description": "Service agnostic abstraction of search querying requirements",
    "type": "silverstripe-vendormodule",
    "license": "proprietary",
    "homepage": "https://github.com/silverstripeltd/discoverer",
    "authors": [
        {
            "name": "Christopher David Penny",
            "email": "chris.penny@gmail.com"
        }
    ],
    "keywords": [
        "Silverstripe",
        "Silverstripe CMS",
        "Search"
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/framework": "^5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^8.8"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\Discoverer\\": "src/",
            "SilverStripe\\Discoverer\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "php-http/discovery": true,
            "silverstripe/vendor-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
